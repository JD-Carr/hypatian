<!-- templates/auth/register.jinja -->
{% extends "layout.jinja" %}

{% block title %}
Register New User
{% endblock title %}

{% block header %}
<h1>Register</h1>
{% endblock header %}

{% block content %}
<form action="{{ url_for('auth.register') }}" method="post" id="form">
  <fieldset class="form-group" form="form">
    <legend  class="w-auto">Register new account</legend><br>
    {{ form.hidden_tag() }}

    {{ form.email.label }}<br>
    {{ form.email(size=128) }}<br>
    {% for error in form.email.errors %}
      <span style="color: red;">[{{ error }}]</span>
    {% endfor %}

    {{ form.password.label }}<br>
    {{ form.password(size=128) }}<br>
    {% for error in form.password.errors %}
      <span style="color: red;">[{{ error }}]</span>
    {% endfor %}

    {{ form.confirm.label }}<br>
    {{ form.confirm(size=128) }}<br>
    {% for error in form.confirm.errors %}
      <span style="color: red;">[{{ error }}]</span>
    {% endfor %}

    {{ form.submit() }}
  </fieldset>
</form>

{% endblock content %}
