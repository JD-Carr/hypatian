<!-- templates/auth/login.jinja -->
{% extends "layout.jinja" %}

{% block title %}
User Login
{% endblock title %}

{% block header %}
<h1>Login</h1>
{% endblock header %}

{% block content %}
<form action="{{ url_for('auth.login') }}" class="form-horizontal" role="form" method="post" id ="form-login">
  <fieldset form="form-login">
    {{ form.hidden_tag() }}

    <div class="form-group">
      {{ form.email.label }}<br>
      {{ form.email(size=128) }}<br>
      {% for error in form.email.errors %}
        <span style="color: red;">[{{ error }}]</span>
      {% endfor %}
    </div>

    <div class="form-group">
      {{ form.password.label }}<br>
      {{ form.password(size=36) }}<br>
      {% for error in form.password.errors %}
          <span style="color: red;">[{{ error }}]</span>
      {% endfor %}
    </div>

    <div class="form-group">
      {{ form.remember_me() }}
      {{ form.remember_me.label }}
    </div>

    {{ form.submit() }}

  </fieldset>
</form>

<p>New User? <a href="{{ url_for('auth.register') }}">Click to Register!</a></p>

{% endblock content %}
